<style>
  .home-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
  }

  .hero-section {
    text-align: center;
    padding: 4rem 0;
    background: var(--auth-gradient, linear-gradient(135deg, #667eea 0%, #764ba2 100%));
    color: var(--ds-fg, #f8fafc);
    border-radius: var(--ds-radius-lg, 16px);
    margin-bottom: var(--ds-spacing-xl, 3rem);
  }

  .hero-section h1 {
    margin: 0 0 1rem;
    font-size: 3rem;
    font-weight: 700;
  }

  .hero-section p {
    font-size: 1.25rem;
    margin: 0;
    opacity: 0.9;
  }

  .welcome-user {
    margin-top: 2rem;
  }

  .welcome-user p {
    margin: 0.5rem 0;
  }

  .role-badge {
    background: var(--c-overlay, rgba(255,255,255,0.2));
    padding: var(--ds-spacing-sm, 0.25rem) var(--ds-spacing-lg, 0.75rem);
    border-radius: 20px;
    font-weight: var(--font-weight-semibold, 600);
    text-transform: capitalize;
  }

  .actions-section,
  .features-section {
    margin-bottom: 3rem;
  }

  .actions-section h2,
  .features-section h2 {
    text-align: center;
    margin: 0 0 var(--ds-spacing-xl, 2rem);
    font-size: var(--font-size-2xl, 2rem);
    font-weight: var(--font-weight-semibold, 600);
    color: var(--ds-fg, #1a202c);
  }

  .actions-grid,
  .features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .action-card {
    background: var(--ds-surface, #fff);
    border-radius: var(--ds-radius-lg, 12px);
    padding: var(--ds-spacing-xl, 2rem);
    box-shadow: var(--ds-shadow-md, 0 4px 6px -1px rgba(0,0,0,0.07));
    text-decoration: none;
    color: var(--ds-fg, inherit);
    transition: all 0.3s ease;
    border: 2px solid transparent;
  }

  .action-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--ds-shadow-md, 0 10px 25px -3px rgba(0,0,0,0.1));
    border-color: var(--c-primary, #3b82f6);
  }

  .action-card.primary-card {
    background: linear-gradient(135deg, var(--c-primary, #3b82f6) 0%, var(--c-primary-dark, #1d4ed8) 100%);
    color: #fff;
  }

  .action-card.primary-card:hover {
    border-color: var(--c-primary-dark, #1d4ed8);
  }

  .action-card.admin-card {
    background: linear-gradient(135deg, var(--c-warning, #f59e0b) 0%, #d97706 100%);
    color: #fff;
  }

  .action-card.admin-card:hover {
    border-color: #d97706;
  }

  .action-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
    display: block;
  }

  .action-card h3 {
    margin: 0 0 0.5rem;
    font-size: 1.5rem;
    font-weight: 600;
  }

  .action-card p {
    margin: 0;
    opacity: 0.8;
    font-size: 1rem;
  }

  .feature-card {
    background: var(--ds-surface, #fff);
    border-radius: var(--ds-radius-lg, 12px);
    padding: var(--ds-spacing-xl, 2rem);
    box-shadow: var(--ds-shadow-md, 0 4px 6px -1px rgba(0,0,0,0.07));
    text-align: center;
    border: 1px solid var(--c-border, #e5e7eb);
  }

  .feature-icon {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    display: block;
  }

  .feature-card h3 {
    margin: 0 0 var(--ds-spacing-sm, 0.5rem);
    font-size: var(--font-size-lg, 1.25rem);
    font-weight: var(--font-weight-semibold, 600);
    color: var(--ds-fg, #1a202c);
  }

  .feature-card p {
    margin: 0;
    color: var(--ds-muted, #6b7280);
    font-size: var(--font-size-sm, 0.875rem);
  }

  @media (max-width: 768px) {
    .home-container {
      padding: 1rem;
    }

    .hero-section {
      padding: 2rem 1rem;
    }

    .hero-section h1 {
      font-size: 2rem;
    }

    .hero-section p {
      font-size: 1rem;
    }

    .actions-grid,
    .features-grid {
      grid-template-columns: 1fr;
    }

    .action-card {
      padding: 1.5rem;
    }

    .feature-card {
      padding: 1.5rem;
    }
  }
</style>
