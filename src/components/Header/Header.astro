---
import Navigation from "@components/Header/Navigation.astro";
import Brand from "./Brand.astro";
---

<header class="main-header">
  <div class="container">
    <Brand />
    <Navigation />
  </div>
</header>


<style is:global>
.main-header {
  position: sticky;
  top: 0;
  z-index: 50;
  width: 100%;
  height: var(--header-height);
  background-color: color-mix(in srgb, var(--c-card), transparent 15%);
  border-bottom: 1px solid var(--c-border);
  backdrop-filter: blur(8px);
  padding: 0 var(--space-lg);
}

/* Desktop grid: brand left, nav centered, controls right */
.main-header .container {
  display: grid;
  grid-template-columns: auto 1fr auto;
  align-items: center;
  height: 100%;
  max-width: var(--container-max-width);
  margin: 0 auto;
  padding: 0 var(--space-lg);
}

.main-header .container > .branding {
  justify-self: start;
}

.main-header .container > nav {
  justify-self: center;
}

.main-header .container > .right-controls {
  justify-self: end;
}

@media (max-width: 700px) {
  .main-header .container {
    grid-template-columns: auto 1fr;
    grid-template-areas: "brand controls" "nav nav";
    align-items: center;
  }
  
  .main-header .container > .branding {
    grid-area: brand;
    justify-self: start;
  }
  
  .main-header .container > .right-controls {
    grid-area: controls;
    justify-self: end;
  }
  
  .main-header .container > nav {
    grid-area: nav;
    justify-self: stretch;
  }
}

/* --- Base Dropdown Styles (Desktop) --- */
.dropdown {
  position: absolute;
  z-index: 55;
  padding: var(--space-sm);
  min-width: 220px;
  background-color: var(--c-card);
  border: 1px solid var(--c-border);
  border-radius: var(--border-radius);
  box-shadow: var(--shadow-lg);
  opacity: 0;
  visibility: hidden;
  transform: translateY(10px);
  transition: opacity var(--transition-speed) ease, 
              transform var(--transition-speed) ease, 
              visibility var(--transition-speed) ease;
  list-style: none;
  margin: 0;
}
</style>