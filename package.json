    "@vercel/speed-insights": "^1.2.0",
    "astro": "^5.13.9",
    "astro-font": "^1.1.0",
    "astro-icon": "^1.1.5",
    "better-auth": "^1.3.13",
    "nodemailer": "^7.0.6"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.4",
    "@playwright/test": "^1.55.0",
    "@types/node": "^24.5.2",
