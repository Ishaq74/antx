  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "test": "vitest",
    "test:unit": "vitest run --coverage",
    "test:unit:watch": "vitest --coverage",
