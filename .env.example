NODE_ENV=development

# Database Configuration
DATABASE_URL="postgresql://postgres:password@localhost:5432/dbname"

# Better Auth Security Configuration
# IMPORTANT: Generate a strong, random secret for production!
# You can use: openssl rand -base64 32
BETTER_AUTH_SECRET="your-super-secure-random-secret-key-here-change-in-production"
BETTER_AUTH_URL="http://localhost:4321"

# Email Configuration (SMTP)
SMTP_HOST=smtp.example.com
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-email-password
SMTP_FROM=noreply@yourdomain.com

# Optional: Vercel Configuration
VERCEL_TOKEN=your_vercel_token

# Security: Rate Limiting Configuration
RATE_LIMIT_WINDOW=60
RATE_LIMIT_MAX=100

# Security: Session Configuration
SESSION_EXPIRES_IN=604800
SESSION_UPDATE_AGE=86400

# Development only: Enable detailed error logging
DEBUG_AUTH=false